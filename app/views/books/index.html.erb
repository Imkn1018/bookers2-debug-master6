<div class="container container px-5 px-sm-0">
  <!--Error-->
  <%= render 'layouts/errors', error: @book %>
  <div class="row">
    <div class="col-md-3">
      <!--User info-->
      <%= render 'users/userInfo', user: @user %>
      <div class="row">
    	  <%= link_to '',edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path(@user) " %>
  　   </div>
      <!--Create a book-->
      <%= render 'books/newBook', book: @book %>
    </div>
    <!--ここまで共通部分-->
    <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse">
        <h2>Books</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40,fallback: "no_image.jpg", size:"40x40"%>
                <% end %>
              </td>
              <div class="favo">
                <td><%= link_to book.title, book_path(book.id) %></td>
              </div>
              <td><%= book.body %></td>
              <%= render "favorites/favorite", book: book %>
              <td>コメント件数：<%= book.post_comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

