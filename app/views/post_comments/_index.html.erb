<table>
  <tbody>
  <% book.post_comments.each do |post_comment| %>
  <tr>
    <td>
      <%= link_to user_path(post_comment.user) do %>
          <%= attachment_image_tag post_comment.user, :profile_image, :fill, 40, 40,fallback: "no_image.jpg", size:"40x40" %><br><%= post_comment.user.name %>
      <% end %>
    </td>
    <td><%= post_comment.comment %></td>
    <% if post_comment.user == current_user %>
    <td class="comment-delete">
      <%= link_to "削除", book_post_comment_path(post_comment.book, post_comment), method: :delete %>
    </td>
   <% end %>
  </tr>
  <% end %>
  </tbody>
</table>